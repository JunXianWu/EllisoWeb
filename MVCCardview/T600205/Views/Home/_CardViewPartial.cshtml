@{
    var cardView = Html.DevExpress().CardView(settings =>
    {
        settings.Name = "card";
        settings.KeyFieldName = "ID";

        settings.Width = Unit.Percentage(100);

        settings.CallbackRouteValues = new { Controller = "Home", Action = "CardViewPartial" };
        settings.Settings.LayoutMode = DevExpress.Web.Layout.Flow;
        settings.Styles.FlowCard.Width = 200;
        settings.Styles.FlowCard.Height = 120;
        settings.SettingsPager.SettingsFlowLayout.ItemsPerPage = ViewBag.ColCount ?? 3;

        settings.Columns.Add("ID");
        settings.Columns.Add("Text");
        settings.Columns.Add("TestDate");

        settings.Settings.ShowHeaderPanel = true;

        settings.BeforeGetCallbackResult = (s, e) => {
            if (ViewBag.ColCount != null)
            {
                MVCxCardView card = (MVCxCardView)s;
                card.SettingsPager.SettingsFlowLayout.ItemsPerPage = ViewBag.ColCount;
            }
        };
    });
}
@cardView.Bind(Model).GetHtml()